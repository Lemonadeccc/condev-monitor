{
    "name": "condev-monitor",
    "version": "0.1.0",
    "private": true,
    "packageManager": "pnpm@10.10.0",
    "scripts": {
        "start:dev": "turbo start:dev",
        "start:fro": "pnpm --filter @condev-monitor/monitor-client dev",
        "build": "turbo build",
        "build:watch": "turbo build:watch",
        "docker:start": "docker compose -p condev-monitor -f .devcontainer/docker-compose.yml up -d",
        "docker:stop": "docker compose -p condev-monitor -f .devcontainer/docker-compose.yml down",
        "docker:init-clickhouse": "sh ./scripts/init-clickhouse.sh",
        "docker:deploy": "docker compose -p condev-monitor -f .devcontainer/docker-compose.deply.yml up -d --build && pnpm docker:init-clickhouse",
        "docker:deploy:stop": "docker compose -p condev-monitor -f .devcontainer/docker-compose.deply.yml down",
        "check": "pnpm lint && pnpm format && pnpm spellcheck",
        "lint:ts": "eslint \"**/*.{ts,tsx}\"",
        "lint": "eslint \"**/*.{ts,tsx}\" --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "spellcheck": "cspell lint --dot --gitignore --color --cache --show-suggestions \"(packages|apps)/**/*.@(html|js|cjs|mjs|ts|tsx|css|scss|md)\"",
        "commit": "cz",
        "prepare": "husky"
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-git"
        }
    },
    "keywords": [],
    "author": "",
    "license": "Apache-2.0",
    "description": "",
    "devDependencies": {
        "@commitlint/cli": "^20.1.0",
        "@commitlint/config-conventional": "^20.0.0",
        "@eslint/js": "^9.39.1",
        "@types/node": "22.15.0",
        "commitizen": "^4.3.1",
        "cspell": "^9.3.0",
        "cz-git": "^1.12.0",
        "eslint": "^9.39.1",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-react-hooks": "^7.0.1",
        "eslint-plugin-react-refresh": "^0.4.24",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "globals": "^16.5.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.5",
        "pm2": "^6.0.13",
        "prettier": "^3.6.2",
        "tsup": "^8.5.0",
        "turbo": "^2.6.1",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.46.3"
    }
}
