enum AppType {
  vanilla
  react
  vue
}

model Application {
  id          Int      @id @default(autoincrement())
  appId       String
  type        AppType
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      Int

  @@map("application")
}
